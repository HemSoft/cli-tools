root = true

[*.cs]

#### Core C# Coding Conventions ####

# Namespaces
# Use file-scoped namespaces
csharp_style_namespace_declarations = file_scoped:warning

# Using Directives
# Place using statements inside the namespace
csharp_using_directive_placement = inside_namespace:warning
# Remove unused using statements
dotnet_diagnostic.IDE0005.severity = warning

# Modifiers
# Order modifiers (e.g. public static)
dotnet_diagnostic.IDE0036.severity = warning

#### Modern C# Language Features ####

# Constructors
# Use primary constructors
csharp_style_prefer_primary_constructors = true:warning
dotnet_diagnostic.IDE0290.severity = warning

# Collections
# Simplify collection initialization
dotnet_diagnostic.IDE0028.severity = warning
# Use collection expression for array (C# 12)
dotnet_diagnostic.IDE0300.severity = warning

# Assignments & Properties
# Use compound assignment
csharp_style_prefer_compound_assignment = true:warning
dotnet_diagnostic.IDE0074.severity = warning
# Prefer field keyword (C# 13 preview / future)
csharp_style_prefer_field_keyword = true:warning
# Prefer null-conditional assignment
csharp_style_prefer_null_conditional_assignment = true:warning

# Generics & Members
# Prefer unbound generic nameof
csharp_style_prefer_unbound_generic_nameof = true:warning
# Prefer partial members
csharp_style_prefer_partial_members = true:warning

#### Null Safety & Pattern Matching ####

# Prefer is null check
dotnet_style_prefer_is_null_check_over_reference_equality_method = true:warning
# Prefer pattern matching over as with null check
csharp_style_pattern_matching_over_as_with_null_check = true:warning

#### Expression-Bodied Members ####

csharp_style_expression_bodied_methods = true:warning
csharp_style_expression_bodied_constructors = true:warning
csharp_style_expression_bodied_operators = true:warning

#### Code Quality & Diagnostics ####

# Dead Code
# Remove unreachable code
dotnet_diagnostic.IDE0035.severity = warning

# Complexity
# Cognitive Complexity
dotnet_diagnostic.S3776.severity = warning


